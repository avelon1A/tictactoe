<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <!-- Change color when pressed -->
        <shape android:shape="rectangle">
            <solid android:color="#35DF46" /> <!-- Change to your desired color -->
            <size
                android:width="80dp"
                android:height="80dp" /> <!-- Change to your desired dimensions -->
        </shape>
    </item>
    <item>
        <!-- Default representation -->
        <layer-list>
            <!-- First box -->
            <item android:left="5dp" android:top="5dp">
                <shape android:shape="rectangle">
                    <solid android:color="#DFE619" /> <!-- Change to your desired color -->
                    <size
                        android:width="80dp"
                        android:height="80dp" /> <!-- Change to your desired dimensions -->
                </shape>
            </item>
            <!-- Second box -->
            <item android:right="10dp" android:bottom="10dp">
                <shape android:shape="rectangle">
                    <solid android:color="#4CAF50" /> <!-- Change to your desired color -->
                    <size
                        android:width="80dp"
                        android:height="80dp" /> <!-- Change to your desired dimensions -->
                </shape>
            </item>
            <!-- Third box -->
            <item android:left="15dp" android:top="15dp">
                <shape android:shape="rectangle">
                    <solid android:color="#365FF1" /> <!-- Change to your desired color -->
                    <size
                        android:width="80dp"
                        android:height="80dp" /> <!-- Change to your desired dimensions -->
                </shape>
            </item>
            <!-- Add more items for additional boxes with different colors and positions -->
        </layer-list>
    </item>
</selector>
